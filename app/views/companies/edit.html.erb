<div style="padding:25px;">
  <h1>Edit Company</h1>
  <%= form_tag "/companies/#{@company.id}", method: :patch do %>
  	<div>
  		<%= hidden_field_tag :user_id, @company.user_id %>
  	</div>
    <div>
      <%= label_tag :name %>
      <%= text_field_tag :name, @company.name %>
    </div> 
    <div>
      <%= label_tag :company_notes %>
      <%= text_area_tag :company_notes, @company.company_notes %>
    </div>
    <div>
      <%= label_tag :twitter_handle %>
      <%= text_field_tag :twitter_handle, @company.twitter_handle %>
    </div>
    <div>
      <%= label_tag :phone_number %>
      <%= text_field_tag :phone_number, @company.phone_number %>
    </div> 
    <div>
      <%= label_tag :address %>
      <%= text_area_tag :address, @company.address %>
    </div>
   
      <%= submit_tag "Submit" %>
    </div>
  <% end %>
</div>